<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserTypeActivity">

    <RelativeLayout
        android:id="@+id/relativeLayout4"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_180sdp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/background_for_top_in_usertype">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_50sdp"
                android:fontFamily="@font/aclonica"
                android:text="Let's Go,"
                android:textColor="@color/white"
                android:textSize="@dimen/_20sdp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_25sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:fontFamily="@font/aclonica"
                android:text="Welcome to Bus Tracker"
                android:textColor="@color/white"
                android:textSize="@dimen/_15sdp" />
        </LinearLayout>

        <ImageView
            android:layout_width="@dimen/_180sdp"
            android:layout_height="@dimen/_150sdp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="-60dp"
            android:layout_marginBottom="-50dp"
            android:scaleType="fitCenter"
            android:src="@drawable/bus_caartoon" />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relativeLayout4"
        android:layout_marginTop="50dp"
        android:text="User Type"

        android:fontFamily="@font/aclonica"
        android:layout_marginStart="@dimen/_30sdp"
        android:textSize="@dimen/_18sdp" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/_60sdp">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/Driver"
            android:layout_width="@dimen/_130sdp"
            android:layout_height="@dimen/_135sdp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="@dimen/_20sdp"
            android:background="@drawable/bus_driver_design2"
            android:orientation="vertical"
            android:gravity="center">
        <LinearLayout
            android:layout_width="@dimen/_70sdp"
            android:layout_height="@dimen/_70sdp"
            android:background="@drawable/bus_driver_design"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                android:src="@drawable/bus_driver_logo"/>

        </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:fontFamily="@font/acme"
                android:text="I am a Driver   ->"
                android:textSize="@dimen/_12sdp" />
        </LinearLayout>


            <LinearLayout
                android:id="@+id/StudentLayout"
                android:layout_width="@dimen/_130sdp"
                android:layout_height="@dimen/_135sdp"
                android:layout_marginEnd="@dimen/_20sdp"
                android:layout_alignParentEnd="true"
                android:orientation="vertical"
                android:background="@drawable/student_cartoon_design2"
                android:gravity="center">
                <LinearLayout
                    android:layout_width="@dimen/_70sdp"
                    android:layout_height="@dimen/_70sdp"
                    android:orientation="vertical"
                    android:background="@drawable/student_cartoon_design"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="@dimen/_50sdp"
                        android:src="@drawable/student_cartoon_logo"/>
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:fontFamily="@font/acme"
                    android:text="I am a Student   ->"
                    android:textSize="@dimen/_12sdp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="@dimen/_130sdp"
                android:layout_height="@dimen/_135sdp"
                android:layout_below="@+id/StudentLayout"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="39dp"

                android:layout_marginEnd="@dimen/_20sdp"
                android:orientation="vertical"
                android:background="@drawable/administrative_design_outer"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="@dimen/_70sdp"
                    android:layout_height="@dimen/_70sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/administrative_design"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="@dimen/_54sdp"
                        android:layout_height="@dimen/_54sdp"
                        android:src="@drawable/management_cartoon_logog" />
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:fontFamily="@font/acme"
                    android:text="I am a the    ->"
                    android:textSize="@dimen/_12sdp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/acme"
                    android:text="College Management"
                    android:textSize="@dimen/_12sdp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="@dimen/_130sdp"
                android:layout_height="@dimen/_135sdp"
                android:layout_below="@+id/Driver"
                android:layout_alignParentStart="true"
                android:layout_marginTop="39dp"
                android:layout_marginStart="@dimen/_20sdp"
                android:orientation="vertical"
                android:background="@drawable/parent_design_outer"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="@dimen/_60sdp"
                    android:background="@drawable/parent_design_inner"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="@dimen/_50sdp"
                        android:src="@drawable/developer_cartoon" />
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:fontFamily="@font/acme"
                    android:text="I am a the Developer   -> "
                    android:textSize="@dimen/_12sdp" />
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>



</RelativeLayout>